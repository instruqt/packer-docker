{
  "variables": {
    "project_id": ""
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "source_image_family": "ubuntu-1804-lts",
      "zone": "europe-west4-c",
      "ssh_username" : "root",
      "image_name": "ubuntu-1804-lts-docker",
      "image_family": "ubuntu-1804",
      "image_labels": {
        "track": "docker",
        "created": "{{ timestamp }}"
      }
    }
  ],
  "provisioners": [
    {
      "destination": "/tmp/resources",
      "source": "resources",
      "type": "file"
    },
    {
      "type": "shell",
      "script": "bootstrap.sh"
    },
    {
      "type": "shell",
      "script": "install-k3s.sh"
    }
  ]
}
